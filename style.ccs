/* Responsiveness media query */

@media (width <=380px) {
    .container .card-area {
        display: grid;
        justify-content: center;
    }

    .card-area .col1 {
        width: 90%;
        text-align: center;
        padding-left: 32px;
        height: 400px;
    }

    .col1 ul {
        padding-top: 60px;
    }

    .card-area .col2 {
        width: 90%;
        text-align: center;
        padding-left: 32px;
        height: 400px;
        margin-top: 30px;
    }

    .col2 ul {
        padding-top: 60px;
    }

    .card-area .col3 {
        width: 90%;
        text-align: center;
        padding-left: 32px;
        height: 400px;
        margin-top: 30px;
        margin-bottom: 150px;
    }

    .col3 ul {
        padding-top: 60px;
    }
}

@media (width <=320px) {
    .card-area .col1 {

        padding-left: 37px;

    }

    .card-area .col2 {

        padding-left: 37px;

    }

    .card-area .col3 {

        padding-left: 37px;

    }

    .col1 h1 {
        font-size: 50px;
    }

    .col2 h1 {
        font-size: 50px;
    }

    .col3 h1 {
        font-size: 30px;
    }

    .col1 h4 {
        font-size: 30px;
    }

    .col2 h4 {
        font-size: 30px;
    }

    .col3 h4 {
        font-size: 30px;
    }
}
